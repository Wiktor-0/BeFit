@model BeFit.Models.Cwiczenia

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuwanie</h1>

<h3>Jesteś pewnien, że chcesz to usunąć?</h3>
<div>
    <h4>Cwiczenia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SesjaCwiczenia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SesjaCwiczenia.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypCwiczenia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypCwiczenia.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ciezar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ciezar)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Seria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Powtorzenia)
        </dt>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót</a>
    </form>
</div>
