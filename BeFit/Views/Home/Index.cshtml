@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Statystyki ćwiczeń – ostatnie 4 tygodnie";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<p class="has-text-right">
    <a asp-controller="SesjaCwiczenies" asp-action="Create" class="button is-link">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Ćwiczenie</th>
            <th>Ile razy wykonywane</th>
            <th>Łącznie powtórzeń</th>
            <th>Średnie obciążenie [kg]</th>
            <th>Maksymalne obciążenie [kg]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr><td colspan="5" class="text-center">Brak danych w ostatnich 4 tygodniach.</td></tr>
        }
        else
        {
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Nazwa</td>
                    <td>@r.IleRazyWykonywane</td>
                    <td>@r.LaczniePowtorzen</td>
                    <td>@(((double)r.SrednieObciazenieKg).ToString("0.##"))</td>
                    <td>@(((double)r.MaksymalneObciazenieKg).ToString("0.##"))</td>
                </tr>
            }
        }
    </tbody>
</table>
